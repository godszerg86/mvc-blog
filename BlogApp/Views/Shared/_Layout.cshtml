
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- favicon -->
    <!-- web-fonts -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:100,300,400,700,500' rel='stylesheet' type='text/css'>

    <!-- font-awesome -->
    <!-- Mobile Menu Style -->
    @*<link href="~/Content/Template/css/mobile-menu.css" rel="stylesheet">*@
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!-- Owl carousel -->
    @*<link href="~/Content/Template/css/owl.carousel.css" rel="stylesheet">
        <link href="~/Content/Template/css/owl.theme.default.min.css" rel="stylesheet">*@
    <!-- Theme Style -->
    <link href="~/Content/Template/css/style.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body id="page-top" data-spy="scroll" data-target=".navbar">

    <div id="main-wrapper">
        <!-- Page Preloader -->
        <div id="preloader">
            <div id="status">
                <div class="status-mes"></div>
            </div>
        </div>
        <!-- preloader -->

        <div class="uc-mobile-menu-pusher">
            <div class="content-wrapper">
                <section id="header_section_wrapper" class="header_section_wrapper">
                    <div class="container" id="top_header">
                        <div class="header-section">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="left_section">
                                        <span class="date">
                                            @DateTime.Now.ToString("dddd") .
                                        </span>
                                        <!-- Date -->
                                        <span class="time">
                                            @DateTime.Now.ToString("MMMM dd yyyy")
                                        </span>
                                        <!-- Time -->
                                        <div class="social">
                                            <!--Facebook-->
                                            <a class="icons-sm fb-ic"><i class="fab fa-facebook-square"></i></a>
                                            <!--GitHub-->

                                            <a class="icons-sm fb-ic"><i class="fab fa-github-square"></i></a>
                                            <!--Linkedin-->
                                            <a class="icons-sm tmb-ic"><i class="fab fa-linkedin"></i></a>

                                        </div>
                                        <!-- Top Social Section -->
                                    </div>
                                    <!-- Left Header Section -->
                                </div>
                                <div class="col-sm-4">
                                    <div class="logo">
                                        <a href="/"><img src="~/Content/Template/img/logo.png" alt="Tech NewsLogo"></a>
                                    </div>
                                    <!-- Logo Section -->
                                </div>
                                <div class="col-sm-4">
                                    <div class="right_section">
                                        <ul class="nav navbar-nav">

                                            @Html.Partial("_LoginPartial")
                                            @*<li><a href="" data-toggle="modal" data-target="#loginModal">Login</a></li>
                                                <li><a href="" data-toggle="modal" data-target="#registerModal">Register</a></li>*@
                                            <li class="dropdown">
                                                <a href="#" data-toggle="dropdown" class="dropdown-toggle">
                                                    <i class="fa fa-search"></i>
                                                </a>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <div class="head-search">
                                                            <form role="form">
                                                                <!-- Input Group -->
                                                                <div class="input-group">
                                                                    <input type="text" class="form-control" placeholder="Type Something">
                                                                    <span class="input-group-btn">
                                                                        <button type="submit" class="btn btn-primary">
                                                                            Search
                                                                        </button>
                                                                    </span>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </li>
                                        </ul>

                                        <!-- Search Section -->
                                    </div>
                                    <!-- Right Header Section -->
                                </div>
                            </div>
                        </div>
                        <!-- Header Section -->
                        <!-- .navbar-collapse -->
                    </div>
                    <!-- .container -->
                    <!-- .nav -->
                </section>
            </div>
            <!-- .navigation-section -->
        </div>
        <!-- .container -->
        <!-- header_section_wrapper -->
        @RenderBody()



    </div>

    <section id="footer_section" class="footer_section">
        <div class="container" id="btm-line">

        </div>

        <div class="footer_bottom_Section">
            <div class="container">
                <div class="row">
                    <div class="footer">
                        <div class="col-sm-3">
                            <div class="social">
                                <!--Facebook-->
                                <a class="icons-sm fb-ic"><i class="fab fa-facebook-square"></i></a>
                                <!--GitHub-->

                                <a class="icons-sm fb-ic"><i class="fab fa-github-square"></i></a>
                                <!--Linkedin-->
                                <a class="icons-sm tmb-ic"><i class="fab fa-linkedin"></i></a>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <p>
                                &copy; Copyright 2016-Tech News . Design by: <a href="https://uicookies.com">uiCookies</a>
                            </p>
                        </div>
                        <div class="col-sm-3">
                            <p>Technology News Magazine</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <a href="#" class="crunchify-top"><i class="fa fa-angle-up" aria-hidden="true"></i></a>



    <div id="loginModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <p>Some text in the modal.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <div id="registerModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <p>Some text in the modal.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!-- Theme Menu -->
    <script src="~/Content/Template/js/mobile-menu.js"></script>

    <!-- Owl carousel -->
    <script src="~/Content/Template/js/owl.carousel.min.js"></script>

    <!-- Theme Script -->

    <script src="~/Content/Template/js/script.js"></script>
</body>
</html>



